<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Library</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Title>FosterFramework.Extensions.Scenes</Title>
		<Product>FosterFramework.Extensions</Product>
		<Version>0.0.8-alpha</Version>
		<Authors>ML</Authors>
		<RootNamespace>Foster.Framework.Extensions.Scenes</RootNamespace>
		<RepositoryUrl>https://github.com/mc-lep/Foster.Extensions.Scenes</RepositoryUrl>
		<PackageId>FosterFramework.Extensions.Scenes</PackageId>
		<PackageProjectUrl>https://github.com/mc-lep/Foster.Extensions.Scenes</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageOutputPath>$(ProjectDir)artifacts/</PackageOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="FosterFramework" Version="0.1.7-alpha" />
  </ItemGroup>
  <ItemGroup>
	  <None Include="..\LICENSE">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	  <None Include="..\README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<None Include="$(ProjectDir)..\LICENSE" Pack="true" PackagePath="/" />
		<None Include="$(ProjectDir)..\README.md" Pack="true" PackagePath="/" />
	</ItemGroup>

</Project>
